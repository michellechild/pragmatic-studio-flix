<header>
<nav>
  <%= link_to image_tag("logo"), root_path %>
  <ul class="left">
    <li><%= nav_link_to "All Movies", movies_path %> </li>
    <li><%= nav_link_to "Upcoming", filtered_movies_path(:upcoming) %> </li>
    <li><%= nav_link_to "Recent", filtered_movies_path(:recent) %> </li>
    <li><%= nav_link_to "Hits", filtered_movies_path(:hits) %> </li>
    <li><%= nav_link_to "Flops", filtered_movies_path(:flops) %> </li>

    <% if current_user_admin? %>
      <li><%= link_to "Genres", genres_path %> </li>
      <li><%= link_to "Add New Movie", new_movie_path %> </li>
    <% end %>
  </ul>
  <ul class="right"> 
    <% if current_user %>
      <li><%= link_to current_user.name, current_user %></li>
      <li><%= link_to "Account Settings", edit_user_path(current_user), class: "button"  %></li>
      <li><%= link_to "Sign Out", session_path(current_user), method: :delete, class: "button"  %></li>
    <% else %>
      <li> <%= link_to "Sign in",  signin_path, class: "button" %></li>
      <li> <%= link_to "Sign up",  signup_path, class: "button" %></li>
    <% end %>
  </ul>
</nav>
</header>